using MailKit.Net.Smtp;
using MailKit.Security;
using MimeKit;
using Microsoft.Extensions.Options;
using Microsoft.Identity.Client;
namespace BlazorServer.Services;

public class EmailServiceModern
{
    private readonly AzureAdSmtpSettings _cfg;
    public EmailServiceModern(IOptions<AzureAdSmtpSettings> options) => _cfg = options.Value;

    public async Task SendAsync(string to, string subject, string body)
    {
        var app = ConfidentialClientApplicationBuilder
            .Create(_cfg.ClientId)
            .WithClientSecret(_cfg.ClientSecret)
            .WithTenantId(_cfg.TenantId)
            .Build();

        // Scope para SMTP con client credentials
        var scopes = new[] { "https://outlook.office365.com/.default" };
        var result = await app.AcquireTokenForClient(scopes).ExecuteAsync();
        var accessToken = result.AccessToken;
        Console.WriteLine($"Token audience: {result.Account?.Username ?? "no-account"}");
        Console.WriteLine($"Token expira en: {result.ExpiresOn}");

        var message = new MimeMessage();
        message.From.Add(new MailboxAddress("Formulario", _cfg.SmtpUser));
        Console.WriteLine($"SMTP User configurado: {_cfg.SmtpUser}");
        message.To.Add(MailboxAddress.Parse(to));
        message.Subject = subject;
        message.Body = new TextPart("plain") { Text = body };

        using var client = new SmtpClient();
        await client.ConnectAsync("smtp.office365.com", 587, SecureSocketOptions.StartTls);
        var oauth2 = new SaslMechanismOAuth2(_cfg.SmtpUser, accessToken);
        await client.AuthenticateAsync(oauth2);

        await client.SendAsync(message);
        await client.DisconnectAsync(true);
    }
}

public class AzureAdSmtpSettings
{
    public string? TenantId { get; set; }
    public string? ClientId { get; set; }
    public string? ClientSecret { get; set; }
    public string? SmtpUser { get; set; }
}
